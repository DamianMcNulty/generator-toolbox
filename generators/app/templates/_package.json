{
  "name": "Toolbox",
  "version": "0.0.0",
  "main": "index.html",
  "scripts": {
    "build": "yarn && gulp build"
  },
  "browserslist": [
    "> 1% in CH",
    "last 2 versions"
  ],
  "dependencies": {
    "autoprefixer": "^6.7.7",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "browserify": "^14.3.0",
    "cssnano": "^3.10.0",
    "del": "^2.2.2",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-load-plugins": "^1.5.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.4.0",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-stylelint": "^3.9.0",
    "gulp-util": "^3.0.8",
    "postcss-reporter": "^3.0.0",
    "postcss-scss": "^0.4.1",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-order": "^0.4.3",
    "yargs": "^7.1.0"
  },
  "devDependencies": {
    "gulp-notify": "^3.0.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "stylelint": {
    "ignoreFiles": [
      "<%= assets %>sass/main.scss",
      "<%= assets %>sass/main-variables.scss"<% if (bootstrap) { %>,
      "<%= assets %>sass/bootstrap-variables.scss",
      "<%= assets %>sass/bootstrap.scss"<% } %>
    ],
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-vendor-prefix": true,
      "media-feature-name-no-vendor-prefix": true,
      "property-no-vendor-prefix": true,
      "selector-no-vendor-prefix": true,
      "value-no-vendor-prefix": true,
      "selector-pseudo-element-colon-notation": "single"
    },
    "order/order": [
      "custom-properties",
      "dollar-variables",
      "declarations",
      "at-rules",
      "rules"
    ],
    "order/properties-order": [
      "content",
      "display",
      "flex",
      "position",
      "top",
      "right",
      "bottom",
      "left",
      "float",
      "width",
      "height",
      "margin",
      "padding",
      "background",
      "border",
      "font-familly",
      "font-size",
      "line-height",
      "font-weight",
      "font-style",
      "color",
      "transform",
      "transition"
    ]
  }
}
